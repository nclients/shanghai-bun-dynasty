---
import Button from "./Button.astro";
const { content, section } = Astro.props;
---

<section>
  {
    section.mode === 1 ? (
      <div>
        <div class={`rounded-lg relative max-w-4xl overflow-hidden m-auto`}>
          {section.bgImg ? (
            <>
              <img
                src={`/${section.bgImg}`}
                alt={section.bgImgAlt}
                class="absolute inset-0 -z-10 h-full w-full object-cover"
              />
            </>
          ) : null}
          <span
            class="absolute -z-10 w-full inset-0 top-0 left-0"
            style={`background-color:${section.bgColor}; opacity: ${section.bgOpacity}`}
          />
          <div class="m-auto max-w-2xl md:max-w-7xl flex justify-center items-center h-full">
            {section.imgPosition === "noImg" ? (
              <div class="text-center">
                <h2
                  class="text-3xl font-bold tracking-tight sm:text-4xl"
                  style={`color: ${section.titleColor}`}
                >
                  {section.title}
                </h2>
                <p
                  class="mt-6 text-lg leading-8 text-gray-300"
                  style={`color: ${section.descriptionColor}`}
                >
                  {section.description}
                </p>
                <div class="mt-10 flex items-center justify-center gap-x-6">
                  <Button
                    content={content}
                    text="Order Online"
                    href={`${content.onlineOrderLink}`}
                  />
                </div>
              </div>
            ) : null}
            {section.imgPosition === "imgLeft" ||
            section.imgPosition === "imgRight" ? (
              <div
                class={`relative isolate ${section.type !== "hero" ? "" : "pt-14"}`}
              >
                <div class="mx-auto max-w-7xl grid grid-cols-2 lg:gap-x-10">
                  <div class="mx-auto max-w-2xl lg:mx-0 lg:flex-auto">
                    <h2
                      class="mt-10 max-w-lg text-3xl font-bold tracking-tight sm:text-4xl"
                      style={`color:${section.titleColor};`}
                    >
                      {section.title}
                    </h2>
                    <p
                      class="mt-6 text-lg leading-8"
                      style={`color:${section.descriptionColor};`}
                    >
                      {section.description}
                    </p>
                    <div class="crusor-pointer mt-10 flex items-center gap-x-6">
                      <Button
                        content={content}
                        text="Order Online"
                        href={`${content.onlineOrderLink}`}
                      />
                    </div>
                  </div>

                  <img
                    src={`/${section.imgName}`}
                    class={`mx-auto w-full max-h-80 drop-shadow-xl object-${section.imgSize} ${section.imgSize === "contain" ? "p-8" : null}  ${section.imgPosition === "imgLeft" ? "order-first" : null}`}
                    alt={section.imgAlt}
                  />
                </div>
              </div>
            ) : null}
          </div>
        </div>
      </div>
    ) : null
  }
</section>
